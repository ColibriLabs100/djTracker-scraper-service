{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/@sparticuz/chromium/bin/**"]
      }
    }
  ],
  "routes": [
    { "src": "/.*", "dest": "/index.js" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
